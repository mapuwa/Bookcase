{block content}
    <div class="container">
        <h1>{$book['title']}</h1>
        <h2>{join(', ',$book['authors'])}</h2>
        <img src="{$book['image']}">
        <p>{$book['description']}</p>
        <h4>Počet stran: {$book['pages']}</h4>
        <h4>Vydáno: {$book['datePublished']}, {$book['publisher']}</h4>
        <h4>Žánr: {$book['genre']}</h4>
        <h4>ISBN: {$book['isbn']}</h4>
    </div>

    <a n:href="Book:create $link" n:if="$user->loggedIn">Add new book</a>
{/block}