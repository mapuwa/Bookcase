<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">
    <link href="https://fonts.googleapis.com/css?family=Raleway:400,600,700,300" rel="stylesheet" type="text/css">
	<link rel="stylesheet" type="text/css" href="/css/style.css">
	<title>{ifset title}{include title|stripHtml} | {/ifset}Nette Web</title>
</head>

<body>
    <nav>
        <ul class="navigation">
            <li class="navigation__item navigation__item--header"><a n:href="Homepage:">Bookcase</a></li>
            <li class="navigation__item" >{control search}</li>
            <li class="navigation__item" ><a n:href="Homepage:">Nastavení</a></li>
            {if $user->loggedIn}
                <li class="navigation__item" ><a n:href="Sign:out">Odhlásit</a></li>
            {else}
                <li class="navigation__item" ><a n:href="Sign:in">Přihlásit</a></li>
            {/if}
        </ul>
    </nav>

	<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>

	{include content}

	{block scripts}
	<script src="https://nette.github.io/resources/js/netteForms.min.js"></script>
	{/block}
</body>
</html>
